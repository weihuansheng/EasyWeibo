<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/weibo_list_padding">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/commentUsImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        fresco:placeholderImage="@drawable/default_img"
        fresco:roundAsCircle="true"/>

    <TextView
        android:id="@+id/commentUsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/us_name_text_size"
        android:layout_toRightOf="@+id/commentUsImg"
        android:layout_centerVertical="true"
        android:textColor="@color/color_black"
        android:paddingLeft="@dimen/weibo_list_padding"/>

    <TextView
        android:id="@+id/commentCreatedAtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
    <TextView
        android:id="@+id/commentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/comment_text_size"
        android:paddingLeft="56dp"
        android:paddingRight="@dimen/weibo_list_padding"
        android:paddingBottom="@dimen/weibo_list_padding"
        android:textColor="@color/color_black"/>
</LinearLayout>